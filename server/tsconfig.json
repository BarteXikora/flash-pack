{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "target": "ES6",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}